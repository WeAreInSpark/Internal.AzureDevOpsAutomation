{
  "type": "Task",
  "rules": [
    {
      "affectedType": "Product Backlog Item",
      "ifActorFieldType": "State",
      "andActorFieldValue": "Done",
      "whereAffectedFieldType": "State",
      "andNotAffectedFieldValues": [ "Done" ],
      "setAffectedFieldValueTo": "Done",
      "isAllActors": true
    },
    {
      "affectedType": "Bug",
      "ifActorFieldType": "State",
      "andActorFieldValue": "Done",
      "whereAffectedFieldType": "State",
      "andNotAffectedFieldValues": [ "Done" ],
      "setAffectedFieldValueTo": "Done",
      "isAllActors": true
    }
  ]
}
